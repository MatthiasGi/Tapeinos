%p.lead= t '.lead'
:markdown
  #{t '.description'}

= simple_horizontal_form_for :settings, url: wizard_path, method: :put do |f|
  = f.input :domain, input_html: { autofocus: true }
  = f.input :redis
  = f.input :timezone, collection: ActiveSupport::TimeZone.all.map(&:name), input_html: { class: 'chosen-select' }
  .text-right
    = f.button :button do
      = t 'defaults.forward'
      = icon :triangle_right
