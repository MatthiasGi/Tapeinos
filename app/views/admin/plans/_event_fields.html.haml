%tr.nested-fields
  %td
    = f.input_field :date
    = f.error :date
  %td= f.input_field :title, class: 'form-control'
  %td= f.input_field :location, class: 'form-control'
  %td= f.input_field :needed, class: 'form-control min-control'
  %td
    = link_to_remove_association f, class: 'btn btn-danger' do
      = icon :trash
      = t('defaults.remove')
